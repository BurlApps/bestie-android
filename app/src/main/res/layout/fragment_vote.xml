<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rootLayout"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.gmail.nelsonr462.bestie.ui.VoteFragment"
                android:background="@color/bestieBlue">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/vote_counter"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/voteCounter"
        android:src="@drawable/vote_counter"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/votingLayout2"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/voteImage3"
            android:layout_weight="1">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:riv_corner_radius="10dp"
                app:riv_border_width="1dp"
                app:riv_border_color="@color/borderFadedGrey"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay_vote"
                android:id="@+id/percentOverlay3"
                android:typeface="monospace"
                android:text="@string/percent_placeholder"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:shadowColor="@color/votePercentShadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:gravity="center"
                android:visibility="invisible"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@mipmap/ic_white_flag"
                android:id="@+id/flag3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:alpha=".8"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/voteImage4">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:riv_corner_radius="10dp"
                app:riv_border_width="1dp"
                app:riv_border_color="@color/borderFadedGrey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay_vote"
                android:id="@+id/percentOverlay4"
                android:typeface="monospace"
                android:text="@string/percent_placeholder"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:shadowColor="@color/votePercentShadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:gravity="center"
                android:visibility="invisible"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@mipmap/ic_white_flag"
                android:id="@+id/flag4"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:alpha=".8"
                />

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/votingLayout"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/voteImage1"
            android:layout_weight="1">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:riv_corner_radius="10dp"
                app:riv_border_width="1dp"
                app:riv_border_color="@color/borderFadedGrey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay_vote"
                android:id="@+id/percentOverlay1"
                android:typeface="monospace"
                android:text="@string/percent_placeholder"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:shadowColor="@color/votePercentShadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:gravity="center"
                android:visibility="invisible"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@mipmap/ic_white_flag"
                android:id="@+id/flag1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:alpha=".8"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/voteOnboard1"
                android:visibility="invisible"
                android:background="@drawable/overlay_vote_onboard"
                android:text="@string/vote_onboard_message"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="32sp"
                android:shadowColor="@color/votePercentShadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/voteImage2">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:riv_corner_radius="10dp"
                app:riv_border_width="1dp"
                app:riv_border_color="@color/borderFadedGrey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay_vote"
                android:id="@+id/percentOverlay2"
                android:typeface="monospace"
                android:text="@string/percent_placeholder"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:shadowColor="@color/votePercentShadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:gravity="center"
                android:visibility="invisible"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@mipmap/ic_white_flag"
                android:id="@+id/flag2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:alpha=".8"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/voteOnboard2"
                android:visibility="invisible"
                android:background="@drawable/overlay_vote_onboard"
                android:text="@string/vote_onboard_message"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="32sp"
                android:shadowColor="@color/votePercentShadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/versusCircleShape"
        android:src="@drawable/versus_circle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/versusCircleShape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/bestieBlue"
        android:textSize="22sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:text="@string/versus_circle_text"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:id="@+id/loadImageProgressBar"
        android:visibility="invisible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:id="@+id/checkForMoreLayout"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="true"
            android:text="@string/out_of_pictures_message"
            android:textSize="16sp"
            android:textColor="#a4a4a4"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_now_button"
            android:typeface="monospace"
            android:textColor="@android:color/white"
            android:background="@drawable/bestie_red_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/checkNowButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/voteOnboardScreen"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_onboard_message"
            android:textSize="28sp"
            android:textColor="@color/bestieRed"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</RelativeLayout>
